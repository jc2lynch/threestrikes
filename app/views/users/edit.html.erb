<h1>Edit your Profile</h1>
<%= @user.errors.full_messages %>
<%= form_for @user do |f| %>
	Name: <%= f.text_field :name %>
	Email: <%= f.text_field :email %>
	Favorite_team: <%= f.text_field :favorite_team %>
	<%= f.submit "save changes!" %>
<% end %>
<%= link_to "DELETE", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete this"}  %>
